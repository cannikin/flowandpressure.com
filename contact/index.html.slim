javascript:
  $().alert();
  // show the 'thanks' message if we just came back from the server
  if (location.search.match(/sent/)) {
    $('.alert-success').show();
  } else if(location.search.match(/message/)) {
    $('.alert-error').show().find('.body').html(decodeURIComponent(location.search.split('message=')[1]))
  }
